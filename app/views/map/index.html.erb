<% provide :title, "マップ" %>
<div id="map"></div>
<div data-role="popup" id="newPlace" data-theme="a" class="ui-corner-all">
    <a href="#" data-rel="back" class="ui-btn ui-corner-all ui-shadow ui-btn-a ui-icon-delete ui-btn-icon-notext ui-btn-left">Close</a>
    <%= form_for(@place) do |f| %>
        <div style="padding:10px 20px;">
            <h3>場所の登録</h3>
            <%= f.label :name, class: 'ui-hidden-accessible' %>
            <%= f.text_field :name, { placeholder: '名前' } %>
            <%= f.label :lat, class: 'ui-hidden-accessible' %>
            <%= f.hidden_field :lat, { placeholder: '緯度' } %>
            <%= f.label :lng, class: 'ui-hidden-accessible' %>
            <%= f.hidden_field :lng, { placeholder: '経度' } %>
            <%= f.label :description, class: 'ui-hidden-accessible' %>
            <%= f.text_area :description, { placeholder: '説明' } %>
            <%= f.submit "登録", data: { theme: 'b' } %>
        </div>
    <% end %>
</div>

<script src="http://maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script>
function mapFitToWindow() {
    var windowInnerHeight = jQuery(window).innerHeight(),
        headerHeight = jQuery("#header").height(),
        footerHeight = jQuery("#footer").height(),
        uiContentPadding = parseInt(jQuery(".ui-content").css('padding-top'), 10) + parseInt(jQuery(".ui-content").css('padding-bottom'), 10);
    jQuery("#map").css("height", windowInnerHeight - headerHeight - footerHeight - uiContentPadding);
}

jQuery(window).on('resize', function (event) {
    mapFitToWindow();
});

jQuery(document).on('pageshow', function (event) {
    mapFitToWindow();
});

handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    console.log(<%=raw @hash.to_json %>);
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    google.maps.event.addListener(handler.getMap(), 'rightclick', function (event) {
        var marker = handler.addMarker({lat: event.latLng.lat(), lng: event.latLng.lng()});
        //var infoWindow = new google.maps.InfoWindow({content: 'poepoe'});
        //infoWindow.open(null, marker);
        //console.log(event.latLng.lat() + ':' +  event.latLng.lng());
        jQuery('#place_lat').val(event.latLng.lat());
        jQuery('#place_lng').val(event.latLng.lng());
        jQuery('#newPlace').popup("open");
    });
});
</script>
