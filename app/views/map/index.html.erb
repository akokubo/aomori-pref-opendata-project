<% provide :title, "マップ" %>
<div id="map"></div>

<script src="http://maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script>
function mapFitToWindow() {
  var windowInnerHeight = jQuery(window).innerHeight(),
      headerHeight = jQuery("#header").height(),
      footerHeight = jQuery("#footer").height(),
      uiContentPadding = parseInt(jQuery(".ui-content").css('padding-top'), 10) + parseInt(jQuery(".ui-content").css('padding-bottom'), 10);
  jQuery("#map").css("height", windowInnerHeight - headerHeight - footerHeight - uiContentPadding);
}

jQuery(window).on('resize', function (event) {
    mapFitToWindow();
});

jQuery(document).on('pageshow', function (event) {
    mapFitToWindow();
});

handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
});
</script>